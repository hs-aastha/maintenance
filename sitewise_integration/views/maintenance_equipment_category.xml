<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_maintenance_equipment_category_form_inherit" model="ir.ui.view">
        <field name="name">maintenance.equipment.category.form.inherit</field>
        <field name="model">maintenance.equipment.category</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_category_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='note']" position="after">
                <field name="sitewise_model_id"/>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <page string="Attributes">
                    <field name="attribute_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="default_value"/>
                            <field name="data_type"/>
                            <field name="external_id"/>
                        </tree>
                    </field>
                </page>
                <page string="Measurements">
                    <field name="measurement_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="unit"/>
                            <field name="data_type"/>
                            <field name="external_id"/>
                        </tree>
                    </field>
                </page>
                <page string="Transforms">
                    <field name="transform_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="unit"/>
                            <field name="data_type"/>
                            <field name="external_id"/>
                            <field name="formula"/>
                        </tree>
                    </field>
                </page>
                <page string="Metrics">
                    <field name="metric_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="unit"/>
                            <field name="data_type"/>
                            <field name="external_id"/>
                            <field name="formula"/>
                            <field name="time_interval"/>
                            <field name="custom_interval"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
