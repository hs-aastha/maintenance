<odoo>
    <data>
        <!-- Modify Maintenance Equipment Category Form View -->
        <record id="view_maintenance_equipment_category_form" model="ir.ui.view">
            <field name="name">maintenance.equipment.category.form</field>
            <field name="model">maintenance.equipment.category</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_category_view_form"/>
            <field name="arch" type="xml">
                <!-- Add fields for model creation and the "Create Model" button -->
                <xpath expr="//sheet/group" position="inside">
                    <group string="AWS IoT Sitewise Model">
                        <field name="model_name"/>
                        <field name="model_description"/>
                        <button name="button_create_model" type="object" string="Create Model" class="btn-primary"/>
                        <field name="sitewise_model_id"/>
                    </group>
                </xpath>
                <!-- Add new tabs in the notebook -->
                <xpath expr="//notebook" position="inside">
                    <page string="Attributes">
                        <field name="attribute_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="default_value"/>
                                <field name="data_type"/>
                                <field name="external_id"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Measurements">
                        <field name="measurement_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="unit"/>
                                <field name="data_type"/>
                                <field name="external_id"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Transforms">
                        <field name="transform_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="unit"/>
                                <field name="data_type"/>
                                <field name="external_id"/>
                                <field name="formula"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Metrics">
                        <field name="metric_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="unit"/>
                                <field name="data_type"/>
                                <field name="external_id"/>
                                <field name="formula"/>
                                <field name="time_interval"/>
                                <field name="custom_interval"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
