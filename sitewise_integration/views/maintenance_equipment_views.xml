<odoo>
    <data>
        <!-- Modify Maintenance Equipment Form View -->
        <record id="view_maintenance_equipment_form" model="ir.ui.view">
            <field name="name">maintenance.equipment.form</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <!-- Add new tabs in the notebook -->
                <xpath expr="//notebook" position="inside">
                    <page string="Attributes">
                        <field name="attribute_line_ids">
                            <tree editable="bottom">
                                <field name="attribute_id" widget="many2one"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Measurements">
                        <field name="measurement_line_ids">
                            <tree editable="bottom">
                                <field name="measurement_id" widget="many2one"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Transforms">
                        <field name="transform_line_ids">
                            <tree editable="bottom">
                                <field name="transform_id" widget="many2one"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Metrics">
                        <field name="metric_line_ids">
                            <tree editable="bottom">
                                <field name="metric_id" widget="many2one"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
