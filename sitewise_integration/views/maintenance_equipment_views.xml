<!-- /path/to/your/addons/sitewise_integration/views/maintenance_equipment_views.xml -->

<odoo>
    <data>
        <!-- Modify Maintenance Equipment Form View -->
        <record id="view_maintenance_equipment_form" model="ir.ui.view">
            <field name="name">maintenance.equipment.form</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="Attributes">
                        <field name="attribute_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="default_value"/>
                                <field name="data_type"/>
                                <field name="external_id"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Measurements">
                        <field name="measurement_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="unit"/>
                                <field name="data_type"/>
                                <field name="external_id"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Transforms">
                        <field name="transform_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="unit"/>
                                <field name="data_type"/>
                                <field name="external_id"/>
                                <field name="formula"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Metrics">
                        <field name="metric_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="unit"/>
                                <field name="data_type"/>
                                <field name="external_id"/>
                                <field name="formula"/>
                                <field name="time_interval"/>
                                <field name="custom_interval"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="action_create_sitewise_model" type="object" string="Create Model" class="oe_highlight"/>
                    <button name="action_create_sitewise_asset" type="object" string="Create Asset" class="oe_highlight"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
